#!/usr/bin/env ruby

Dir['zsh/bundle/*'].each do |d|
  Dir.chdir(d) do
    `git pull`
  end
end

def push_to_github()
  `git add vim/bundle/NeoBundle.lock`
  `git commit -m 'Vim plugin update'`
  `git add zsh/bundle`
  `git commit -m 'ZSH plugin update'`
  `git push`
end

push_to_github unless `git status` =~ /nothing to commit/
